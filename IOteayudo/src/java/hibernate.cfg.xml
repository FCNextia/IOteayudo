<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
    //aqui fijense si su direccion de localhost coincide
    <property name="hibernate.connection.url">jdbc:postgresql://localhost:5433/IOteayudo</property>
    //usuario de su base de datos
    <property name="hibernate.connection.username">postgres</property>
    //contrasenia de su base de datos
    <property name="hibernate.connection.password">postgres</property>
    
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.query.factory_class">org.hibernate.hql.internal.classic.ClassicQueryTranslatorFactory</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <mapping resource="modelo/Tutor.hbm.xml"/>
    <mapping resource="modelo/Materia.hbm.xml"/>
    <mapping resource="modelo/TutorMateria.hbm.xml"/>
    <mapping resource="modelo/Usuario.hbm.xml"/>
    <mapping resource="modelo/Alumno.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
